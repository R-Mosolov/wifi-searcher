extends layout

block content
  .row.page-header
    .col-lg-12
      h1 Отзыв о Coffee Like
  .row
    .col-xs-12.col-sm-12
      form.form-horizontal(action='/location', method='get', role='form')
        .form-group
          label.col-xs-10.col-sm-12.text-left.control-label(for='name') Ваше имя
          .col-xs-10.col-sm-12
            input#name.form-control(name='name')

        .form-group
          label.col-xs-10.col-sm-12.text-left.control-label(for='rating') Ваша оценка
          .col-xs-10.col-sm-12
            select#rating.form-control.input-sm(name='rating')
              option 5
              option 4
              option 3
              option 2
              option 1

        .form-group
          label.col-xs-10.col-sm-12.text-left.control-label(for='review') Ваш отзыв
          .col-xs-10.col-sm-12
            textarea#review.form-control(name='review', rows='5')

        .col-xs-10.col-sm-12
          button.btn-success.btn-default.pull-right Добавить отзыв
